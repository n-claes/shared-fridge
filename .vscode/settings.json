{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "mochaExplorer.files": [
    "./src/tests/*.test.ts",
    "./src/tests/**/*.test.ts",
  ],
  "mochaExplorer.watch": [
    "./src/tests/*.test.ts",
    "./src/tests/**/*.test.ts",
  ],
  "mochaExplorer.nodeArgv": [
    "--loader",
    "ts-node/esm"
  ],
  "mochaExplorer.env": {
    "NODE_ENV": "test",
    "SWCRC": "true"
  },
  "testExplorer.mergeSuites": true,
}
